{
  "name": "@chittyos/crypto",
  "version": "0.1.0",
  "description": "ChittyOS cryptographic primitives: Ed25519 signing, RFC 8785 JSON canonicalization, base64 utilities",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./ed25519": {
      "types": "./dist/ed25519.d.ts",
      "import": "./dist/ed25519.js",
      "require": "./dist/ed25519.cjs"
    },
    "./jcs": {
      "types": "./dist/jcs.d.ts",
      "import": "./dist/jcs.js",
      "require": "./dist/jcs.cjs"
    },
    "./base64": {
      "types": "./dist/base64.d.ts",
      "import": "./dist/base64.js",
      "require": "./dist/base64.cjs"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts src/ed25519.ts src/jcs.ts src/base64.ts --format esm,cjs",
    "test": "vitest run",
    "dev": "vitest --watch",
    "lint": "tsc --noEmit",
    "fmt": "prettier -w ."
  },
  "dependencies": {
    "json-canonicalize": "^1.0.6",
    "yaml": "^2.6.0"
  },
  "devDependencies": {
    "@types/node": "^22.8.1",
    "prettier": "^3.7.4",
    "tsup": "^8.5.1",
    "typescript": "^5.6.3",
    "vitest": "^2.1.9"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "chittyos",
    "ed25519",
    "rfc8785",
    "jcs",
    "canonicalization",
    "crypto",
    "signing"
  ]
}
