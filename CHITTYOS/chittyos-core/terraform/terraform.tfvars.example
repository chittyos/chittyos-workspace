# ChittyOS Terraform Configuration Example
# Copy this file to terraform.tfvars and update with your values

# 1Password Service Account Token
# Get this from 1Password > Developer Tools > Service Accounts
op_service_account_token = "ops_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"

# Deployment Environment
environment = "production"

# ChittyOS Version
chittyos_version = "2.1.0-ai"

# Enable comprehensive monitoring
enable_monitoring = true

# Enable audit logging for compliance
enable_audit_logging = true

# Enable automated credential rotation
credential_rotation_enabled = true

# Compliance level (standard, enhanced, banking_grade)
compliance_level = "banking_grade"

# Deploy across multiple accounts
multi_account_deployment = true

# Enable ChittyFoundation governance
foundation_governance_enabled = true

